<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.itsonin.android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PaletteCardListBg"
        >

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="@dimen/card_spacing"
            android:background="@color/PaletteCardListBg"
            android:smoothScrollbar="false"
            android:scrollbarStyle="outsideOverlay"
            android:listSelector="@drawable/null_selector_bg"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/card_spacing"
            android:clipToPadding="false"
            android:stretchMode="none"
        />

    <!--
            android:numColumns="@integer/event_list_num_columns"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/card_spacing"
            android:horizontalSpacing="@dimen/card_spacing"
    -->
    <!--
    <com.etsy.android.grid.StaggeredGridView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:item_margin="@dimen/card_spacing"
            app:column_count="@integer/event_list_num_columns"
            app:grid_paddingLeft="@dimen/card_spacing"
            app:grid_paddingRight="@dimen/card_spacing"
            app:grid_paddingTop="@dimen/card_spacing"
            app:grid_paddingBottom="@dimen/card_spacing"
        />
    -->

    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/card_attention"
        android:textSize="@dimen/card_title"
        android:text="@string/no_events_found"
        android:visibility="gone"
        />

</FrameLayout>